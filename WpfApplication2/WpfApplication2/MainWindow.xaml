        <Button Content="Последен преглед на куче" HorizontalAlignment="Left" Height="23" Margin="32,268,0,0" VerticalAlignment="Top" Width="149" Click="Button_Click_1"/>
        <Label x:Name="Result" Content="" HorizontalAlignment="Left" Height="31" Margin="216,266,0,0" VerticalAlignment="Top" Width="107"/>

    </Grid>
</Window>
